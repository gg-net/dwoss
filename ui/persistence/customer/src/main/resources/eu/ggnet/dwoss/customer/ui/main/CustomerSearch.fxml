<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.ggnet.dwoss.customer.ui.CustomerSearchController">
   <top>
      <BorderPane id="mainPane">
         <left>
            <Label text="Kunden Suche;" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button fx:id="searchButton" mnemonicParsing="false" text="Suche" BorderPane.alignment="CENTER" />
         </right>
         <center>
            <VBox>
               <children>
                  <TextField fx:id="searchField" promptText="Suche" />
                  <HBox>
                     <children>
                        <CheckBox fx:id="kid" mnemonicParsing="false" text="Kunden ID" />
                        <CheckBox fx:id="lastname" mnemonicParsing="false" selected="true" text="Nachname" />
                        <CheckBox fx:id="firstname" mnemonicParsing="false" text="Vorname" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
         <padding>
            <Insets left="5.0" right="5.0" />
         </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </BorderPane>
   </top>
   <bottom>
      <BorderPane fx:id="bottom" BorderPane.alignment="CENTER">
         <right>
            <ProgressIndicator fx:id="progressIndicator" progress="0.0" BorderPane.alignment="CENTER" />
         </right>
         <center>
            <ProgressBar fx:id="progressBar" progress="0.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </bottom>
   <center>
      <ListView fx:id="resultListView" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
