<?import javafx.scene.text.Font?>

<BorderPane minHeight="550.0" minWidth="450.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.ggnet.dwoss.customer.ui.neo.CustomerEnhanceController">
   <center>
      <VBox spacing="3.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Label fx:id="CustomerKindLabel" text="fulltext">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Region maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                  <Button fx:id="PreferedAddressLabelsButton" minHeight="35.0" mnemonicParsing="false" onAction="#handelPreferedAddressLabelsButton" text="Standard Adressen auswÃ¤hlen" wrapText="true" />
               </children>
            </HBox>
            <HBox spacing="3.0">
               <children>
                  <Label text="Kunden Nummer" />
                  <Label fx:id="kid" text="Label" />
                  <Region minWidth="20.0" HBox.hgrow="ALWAYS" />
                  <Label text="Firma:" />
                  <Label fx:id="kundenname" text="firmennname" />
               </children>
            </HBox>
            <HBox prefWidth="200.0" spacing="3.0">
               <children>
                  <Label fx:id="shoboxLabel" text="Kontakte:" />
                  <Region minWidth="30.0" HBox.hgrow="ALWAYS" />
                  <Label text="Ansprechpartner:" />
                  <TextField fx:id="keyAccount" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox fx:id="showHBox" minHeight="150.0" minWidth="450.0" VBox.vgrow="ALWAYS" />
            <HBox minHeight="150.0" spacing="3.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox fx:id="flagVBox" minHeight="50.0" minWidth="150.0" spacing="3.0" />
                  <Region maxHeight="1.7976931348623157E308" maxWidth="500.0" minWidth="15.0" HBox.hgrow="ALWAYS" />
                  <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="125.0" spacing="3.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button fx:id="mandatorInfoButton" maxWidth="200.0" mnemonicParsing="false" onAction="#handleMandatorInfoButton" text="Mandator Sonder Info" VBox.vgrow="ALWAYS" />
                        <HBox maxWidth="1.7976931348623157E308" spacing="3.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label text="Quellen:" />
                              <ChoiceBox fx:id="source" maxWidth="200.0" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <VBox fx:id="externalSysremIds" maxHeight="1.7976931348623157E308" minHeight="100.0" minWidth="200.0" spacing="3.0" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label text="Kommentar:" />
            <TextArea fx:id="commentTextArea" minHeight="150.0" minWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" spacing="5.0">
         <children>
            <Button fx:id="okButton" minWidth="75.0" mnemonicParsing="false" onAction="#saveButtonHandling" text="OK" />
            <Button fx:id="cancelButton" minWidth="75.0" mnemonicParsing="false" onAction="#cancelButtonHandling" text="Abbrechen" />
         </children>
         <padding>
            <Insets left="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
