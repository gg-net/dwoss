<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>dwoss-ee-web</artifactId>
        <groupId>eu.ggnet.dwoss</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>dwoss-ee-web-search</artifactId>
    <packaging>war</packaging>

    <name>DwOss • EE • Web • Search</name>

    <properties>
        <org-netbeans-modules-projectapi.jsf_2e_language>Facelets</org-netbeans-modules-projectapi.jsf_2e_language>
        <org-netbeans-modules-maven-jaxws.rest_2e_config_2e_type>ide</org-netbeans-modules-maven-jaxws.rest_2e_config_2e_type>
    </properties>

    <build>
        <finalName>${project.artifactId}</finalName>
    </build>

    <dependencies>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-web-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.primefaces</groupId>
            <artifactId>primefaces</artifactId>
            <version>6.1</version>
        </dependency>
        <dependency>
            <groupId>org.primefaces.extensions</groupId>
            <artifactId>primefaces-extensions</artifactId>
            <version>6.1.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml</artifactId>
            <version>3.16</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>dwoss-ee-core-common</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <!--        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>dwoss-ee-persistence-uniqueunit</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>dwoss-ee-persistence-report</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>-->
    </dependencies>

    <profiles>
        <profile>
            <id>tomee-7.0.3</id>
            <!-- For best usage, build with tomee profile. so the logging of the application is redirected to log4j, see log4j.properties -->
            <dependencies>
                <dependency>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-log4j12</artifactId>
                </dependency>
            </dependencies>
            <!-- Infos:
             - customer-pu is created, but I don't know why. And it's mapped somethere
             - In Hibernate 5.2. the org.hibernate.ejb
             - Why tomee lazy: http://stackoverflow.com/questions/40818396/unable-to-build-hibernate-sessionfactory-exception-from-nowhere
            -->
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.tomee.maven</groupId>
                        <artifactId>tomee-maven-plugin</artifactId>
                        <version>7.0.3</version>
                        <configuration>
                            <finalName>${app.name}</finalName>
                            <tomeeVersion>7.0.3</tomeeVersion>
                            <tomeeClassifier>plus</tomeeClassifier>
                            <libs>
                                <lib>org.hibernate:hibernate-entitymanager:5.0.12.Final</lib>
                                <lib>org.hibernate:hibernate-core:5.0.12.Final</lib>
                                <lib>org.hibernate:hibernate-c3p0:5.0.12.Final</lib>
                                <lib>org.hibernate:hibernate-validator:5.4.1.Final</lib>
                                <lib>org.hibernate:hibernate-search-orm:5.6.1.Final</lib>
                                <lib>org.hibernate:hibernate-search-engine:5.6.1.Final</lib>
                                <lib>org.apache.lucene:lucene-core:5.5.4</lib>
                                <lib>org.apache.lucene:lucene-facet:5.5.4</lib>
                                <lib>org.apache.lucene:lucene-misc:5.5.4</lib>
                                <lib>org.apache.lucene:lucene-queries:5.5.4</lib>
                                <lib>org.apache.lucene:lucene-analyzers-common:5.5.4</lib>
                                <lib>org.apache.tomcat:jasper-el:6.0.53</lib>
                                <lib>org.hibernate.common:hibernate-commons-annotations:5.0.1.Final</lib>
                                <lib>com.fasterxml:classmate:1.3.1</lib>
                                <!--<lib>joda-time:joda-time:2.3</lib>-->
                                <lib>org.jboss.logging:jboss-logging:3.3.0.Final</lib>
                                <lib>org.javassist:javassist:3.20.0-GA</lib>
                                <lib>dom4j:dom4j:1.6.1</lib>
                                <lib>antlr:antlr:2.7.7</lib>
                                <lib>remove:asm</lib>
                                <!--                                <lib>remove:bval-core</lib>
                                <lib>remove:bval-jsr303</lib>-->
                                <!--<lib>remove:commons-lang-2.6</lib>-->
                                <lib>remove:openjpa</lib>
                                <lib>remove:serp</lib>
                            </libs>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
