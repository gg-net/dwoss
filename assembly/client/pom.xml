                    <version>${dw.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>client-elus</id>
            <dependencies>
                <dependency>
                    <groupId>eu.ggnet.dw</groupId>
                    <artifactId>dw-config</artifactId>
                    <version>${dw.version}</version>
                </dependency>
            </dependencies>
        </profile>
        <profile>
            <id>client-sample</id>
        </profile>
    </profiles>

</project>
