<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>dwoss-assembly</artifactId>
        <groupId>eu.ggnet.dwoss</groupId>
        <version>1</version>
    </parent>

    <artifactId>dwoss-server</artifactId>
    <packaging>war</packaging>

    <name>DwOss • Assembly • Server (${mandator.name})</name>

    <properties>
        <org-netbeans-modules-projectapi.jsf_2e_language>Facelets</org-netbeans-modules-projectapi.jsf_2e_language>
    </properties>

    <build>
        <finalName>${project.artifactId}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>dwoss-ui-core-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>javax</groupId>
            <artifactId>javaee-web-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.primefaces</groupId>
            <artifactId>primefaces</artifactId>
            <version>4.0</version>
        </dependency>
        <dependency>
            <groupId>org.primefaces.extensions</groupId>
            <artifactId>primefaces-extensions</artifactId>
            <version>2.0.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml</artifactId>
            <version>3.10-FINAL</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>dwoss-ee-extended-price</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>dwoss-ee-persistence-redtape</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>dwoss-ee-extended-receipt</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>dwoss-ee-persistence-rights</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>dwoss-ee-extended-redtape</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>dwoss-ee-extended-misc</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>DW_Tomee_Embedded_Sample</id>
            <properties>
                <dw.isSample>true</dw.isSample>
            </properties>
            <build>
                <plugins>
                    <!--                    <plugin>
                        <groupId>org.wildfly.plugins</groupId>
                        <artifactId>wildfly-maven-plugin</artifactId>
                        <version>1.0.2.Final</version>
                    </plugin>-->

                    <plugin>
                        <groupId>org.apache.openejb.maven</groupId>
                        <artifactId>tomee-maven-plugin</artifactId>
                        <version>1.6.0.2</version>
                        <configuration>
                            <finalName>${app.name}</finalName>
                            <removeTomeeWebapp>true</removeTomeeWebapp>
                            <tomeeVersion>1.6.0.2</tomeeVersion>
                            <systemVariables>
                                <sopo-pu.hibernate.hbm2ddl.auto>create</sopo-pu.hibernate.hbm2ddl.auto>
                                <sopo-pu.hibernate.jdbc.batch_size>0</sopo-pu.hibernate.jdbc.batch_size>
                                <spec-pu.hibernate.hbm2ddl.auto>create</spec-pu.hibernate.hbm2ddl.auto>
                                <spec-pu.hibernate.jdbc.batch_size>0</spec-pu.hibernate.jdbc.batch_size>
                                <stock-pu.hibernate.hbm2ddl.auto>create</stock-pu.hibernate.hbm2ddl.auto>
                                <stock-pu.hibernate.jdbc.batch_size>0</stock-pu.hibernate.jdbc.batch_size>
                                <uniqueunit-pu.hibernate.hbm2ddl.auto>create</uniqueunit-pu.hibernate.hbm2ddl.auto>
                                <uniqueunit-pu.hibernate.jdbc.batch_size>0</uniqueunit-pu.hibernate.jdbc.batch_size>
                                <redtape-pu.hibernate.hbm2ddl.auto>create</redtape-pu.hibernate.hbm2ddl.auto>
                                <redtape-pu.hibernate.jdbc.batch_size>0</redtape-pu.hibernate.jdbc.batch_size>
                                <repair-pu.hibernate.hbm2ddl.auto>create</repair-pu.hibernate.hbm2ddl.auto>
                                <repair-pu.hibernate.jdbc.batch_size>0</repair-pu.hibernate.jdbc.batch_size>
                                <report-pu.hibernate.hbm2ddl.auto>create</report-pu.hibernate.hbm2ddl.auto>
                                <report-pu.hibernate.jdbc.batch_size>0</report-pu.hibernate.jdbc.batch_size>
                            </systemVariables>
                            <libs>
                                <lib>org.hibernate:hibernate-validator:4.3.2.Final</lib>
                                <lib>org.hibernate:hibernate-entitymanager:4.2.15.Final</lib>
                                <lib>org.hibernate:hibernate-core:4.2.15.Final</lib>
                                <lib>org.hibernate:hibernate-c3p0:4.2.15.Final</lib>
                                <lib>org.hibernate.common:hibernate-commons-annotations:4.0.4.Final</lib>
                                <lib>joda-time:joda-time:2.3</lib>
                                <lib>org.jboss.logging:jboss-logging:3.1.0.GA</lib>
                                <lib>org.javassist:javassist:3.15.0-GA</lib>
                                <lib>dom4j:dom4j:1.6.1</lib>
                                <lib>antlr:antlr:2.7.7</lib>
                                <lib>remove:asm</lib>
                                <lib>remove:bval-core</lib>
                                <lib>remove:bval-jsr303</lib>
                                <lib>remove:commons-lang-2.6</lib>
                                <lib>remove:openjpa</lib>
                                <lib>remove:serp</lib>
                            </libs>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>



</project>
